{
  "manifest_version": 3,
  "name": "Learning Assistant (Coursera & LinkedIn Learning)",
  "description": "Ethical productivity: smarter playback, transcripts, time-verified watch tracking, notes, quizzes, and study planner.",
  "version": "1.0.0",
  "permissions": ["storage", "activeTab", "scripting", "alarms", "notifications"],
  "host_permissions": [
    "https://*.coursera.org/*",
    "https://www.linkedin.com/learning/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "ui/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "options_page": "ui/options.html",
  "content_scripts": [
    {
      "matches": ["https://*.coursera.org/*"],
      "js": ["contentScripts/common.js", "contentScripts/coursera.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.linkedin.com/learning/*"],
      "js": ["contentScripts/common.js", "contentScripts/linkedin-learning.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}